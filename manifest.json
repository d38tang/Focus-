{
  "manifest_version": 2,

  "name": "Focus - Website Blocker",
  "description": "Temporarily block distracting websites so you can focus on your priorities!",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html",
    "default_title": "Remove distractions!"
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },

  "background": {
    "scripts": ["js/background.js"]
  }
}
